            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.tencent.liteav.demo.videopreprocess" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
