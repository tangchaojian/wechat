<resources>

    <declare-styleable name="crop_CropView">

        <!--Crop image view-->
        <attr name="crop_aspect_ratio_x" format="float"/>
        <attr name="crop_aspect_ratio_y" format="float"/>

        <!--Overlay view-->
        <attr name="crop_show_oval_crop_frame" format="boolean"/>
        <attr name="crop_circle_dimmed_layer" format="boolean"/>
        <attr name="crop_dimmed_color" format="color"/>

        <attr name="crop_grid_stroke_size" format="dimension"/>
        <attr name="crop_grid_color" format="color"/>
        <attr name="crop_grid_row_count" format="integer"/>
        <attr name="crop_grid_column_count" format="integer"/>
        <attr name="crop_show_grid" format="boolean"/>

        <attr name="crop_frame_stroke_size" format="dimension"/>
        <attr name="crop_frame_color" format="color"/>
        <attr name="crop_show_frame" format="boolean"/>

    </declare-styleable>

    <declare-styleable name="crop_AspectRatioTextView">

        <attr name="crop_artv_ratio_title" format="string"/>

        <attr name="crop_artv_ratio_x" format="float"/>
        <attr name="crop_artv_ratio_y" format="float"/>

    </declare-styleable>

</resources>