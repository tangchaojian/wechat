<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:visibility="invisible"
    tools:visibility="visible">

    <com.tcj.sunshine.ui.viewgroup.UIShapeRelativeLayout
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        app:shape_normal_color="#66000000"
        app:shape_radius="25dp"
        android:paddingRight="35dp">

        <TextView
            android:id="@+id/audience_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxEms="6"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:text="发礼物的人"/>

        <TextView
            android:id="@+id/gift_name_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/audience_name"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="2dp"
            android:text="礼物名称"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/gift_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/audience_name"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/gift_name_tip"
            android:textColor="#74b9ff"
            android:textSize="12sp" />
    </com.tcj.sunshine.ui.viewgroup.UIShapeRelativeLayout>

    <com.tcj.sunshine.ui.imageview.CircleImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@mipmap/float_logo" />

    <ImageView
        android:id="@+id/gift_image"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/background"
        android:layout_marginRight="-10dp"
        android:src="@mipmap/float_logo"/>
</RelativeLayout>